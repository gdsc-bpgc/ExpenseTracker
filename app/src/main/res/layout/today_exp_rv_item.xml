<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<ImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:src="@drawable/close"
    android:layout_centerVertical="true"
    android:layout_alignParentRight="true"
    android:id="@+id/close_tervi"
    android:layout_marginTop="2dp"
    android:layout_marginRight="30dp"
    android:elevation="100dp"/>


<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:cardBackgroundColor="@color/purple_200"
    app:cardCornerRadius="40dp"
    android:layout_marginVertical="5dp"
    android:layout_marginHorizontal="10dp"
    app:cardElevation="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/medicine"
                android:scaleType="centerCrop"
                android:id="@+id/cat_image_tervi"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>


        <TextView
            android:id="@+id/exp_name_tv_tervi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/cat_image_tervi"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/g"
            android:text="Sting and slice"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView

            android:id="@+id/amount_tv_tervi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/exp_name_tv_tervi"
            android:layout_toRightOf="@id/rupee"
            android:fontFamily="@font/g"
            android:text="200"
            android:textColor="@color/yellow"
            android:textSize="20sp" />

        <TextView
            android:layout_toRightOf="@id/cat_image_tervi"
            android:id="@+id/rupee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rs"
            android:textColor="@color/yellow"
            android:textSize="20sp"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/exp_name_tv_tervi"
            android:layout_marginRight="2dp"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>